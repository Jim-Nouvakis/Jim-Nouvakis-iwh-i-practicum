doctype html
html
    head
        title= title
    body
        h1= title
        form(action="/update-cobj" method="POST")
            label(for="name") Name:
            input(type="text" name="name" required)
            br
            label(for="type") Type:
            input(type="text" name="type" required)
            br
            label(for="age") Age:
            input(type="text" name="age" required)
            br
            button(type="submit") Submit
        br
        a(href="/") Return to the homepage